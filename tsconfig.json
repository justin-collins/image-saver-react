{
	"compilerOptions": {
		"module": "commonjs",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"outDir": "dist",
		"baseUrl": ".",
		"jsx": "react-jsx",
		"paths": {
			"*": ["node_modules/*"],
			"@iv/*": ["src/*"],
			"@api/*": ["electron/database/api/*"],
			"@test": ["test"]
		},
		"types": ["@testing-library/jest-dom"]
	},
	"include": ["src", "electron"],
	"files": [
		"src/preload.d.ts"
	]
}